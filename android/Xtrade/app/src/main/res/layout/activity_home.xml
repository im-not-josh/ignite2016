<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:background="@color/primary_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:background="@color/primary_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/applicationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Xtrade.Toolbar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />
        <FrameLayout
            android:id="@+id/containerFrameLayout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:background="@android:color/white"
        android:layout_gravity="left"
        app:headerLayout="@layout/navigation_header_view"
        app:menu="@menu/navigation_drawer_menu"
        app:itemTextColor="@drawable/navigation_item_text_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</android.support.v4.widget.DrawerLayout>