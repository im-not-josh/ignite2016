<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xtrade.RateCell">
  <Grid >
    <Grid.RowDefinitions>
      <RowDefinitionCollection >
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </RowDefinitionCollection>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinitionCollection>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </ColumnDefinitionCollection>
    </Grid.ColumnDefinitions>
  
  <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="1" Text="{Binding CurrencyCode}" HorizontalTextAlignment="Start" Style="{StaticResource LargeTextStyle}" />
  <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding BuysNotesFormatted}" HorizontalTextAlignment="Start" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Style="{StaticResource NormalTextStyle}" />
	<Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Text="{Binding SellsNotesFormatted}" HorizontalTextAlignment="Start" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Style="{StaticResource NormalTextStyle}" />
    
  </Grid>
</ContentView>