<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xtrade.RateDetails"
             Title="Exchange Rate Details">
  <ContentPage.Content>
    <StackLayout Margin="{StaticResource LargePadding}">
      <StackLayout Orientation="Horizontal">
        <Image Source="{Binding SelectedRate.ImageSource}" Aspect="AspectFit" />
        <StackLayout Padding="16, 0, 0, 0">
          <Label Text="{Binding SelectedRate.CurrencyCode}" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Style="{StaticResource NormalTextStyle}" />
          <Label Text="{Binding SelectedRate.Description}" HorizontalTextAlignment="Start" Style="{StaticResource HeaderTextStyle}" />
        </StackLayout>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>